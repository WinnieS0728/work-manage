//- main page
mixin fileFormat
    .
        #[span.fileName 檔名.ppt]#[br]
        最後更新: #[span.updateTime 2021.12.30 AM 11:20]#[br]
        #[a(href="" download="") 下載檔案]


mixin missionList
    h2 《任務案件總覽》
        a(href="mission-list.html") 
            button(type="button")
                <i class="fa-solid fa-pen"></i>
                |編輯
    table.list-by-index(border="1")
        thead 
            th(colspan="8") 任務列表(新到舊排序)
            tr
                th 編號
                th 交辦主管
                th 任務標題
                th 擔當
                th 交辦日期
                th 需求日期
                th 備註
                th 附件
        tbody
            tr
                td(colspan="8").table-data No matching records found

    .controller 
        button.index_backward
            <i class="fa-solid fa-chevron-left"></i>
            |前10筆
        button.index_forward
            |後10筆
            <i class="fa-solid fa-chevron-right"></i>

//- working-report page

mixin report_inputRow(id)
    .row
        span= id
        input#daily-point(type="text" name="daily-point" placeholder='...')
        input#report(type="text" name="report" placeholder='...')


mixin cancel-confirm_btns
    .confirm_btns
        button(type="button").cancel 放棄修改
        button(type="button").confirm 立即儲存


//-  mission page

mixin backToListBtn
    section.back_btn
        button(type="button") 返回列表


mixin fileUpload
    .upload-list
        label#mission_upload-attach(for="") 請選取檔案路徑...
        input#mission_attach(type="file" name="mission_attach" style="display:none;")
        .done 
            <i class="fa-solid fa-check"></i>
        .btns
            button#file-confirm(type="button")
                <i class="fa-solid fa-cloud-arrow-up"></i>
                |上傳
            button#file-preview(type="button")
                <i class="fa-solid fa-eye"></i>
                |查看


mixin missionUpdate(id)
    tr.mission-list
        td.id= id
        td.title 
            input#a(type="text" name="a" placeholder='...')
        td.content
            input#s(type="text" name="s" placeholder='...')
        td.PS
            textarea#d(name="d" cols="30" rows="1" placeholder='...')
        td.date 
            input#f(type="text" name="f" onfocus="(this.type='date')" onblur="(this.type='text')")
        td.state
            span 未完成
            .stateIcon
                .dot
        td.attach
            button 查看
        td.order
            <i class="fa-solid fa-bars"></i>

mixin attachItem(id)
    .file 
        .id= id
        .preview
            <i class="fa-regular fa-file-image"></i>
            .cancel
                <i class="fa-solid fa-xmark"></i>
            .upload
                <i class="fa-solid fa-chevron-up"></i>
        .name 自動帶入.jpg

mixin fileHistory 
