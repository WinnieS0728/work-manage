mixin goal_year(year , chn)
    .year
        label(for=`goal_${year}`) #{chn}預算：
        input(id=`goal_${year}` type="text", name=`${year}` placeholder='請填入目標金額...' value='2,210,962')

mixin goal_place(chn,en)
    .place 
        p.name #{chn}：
        input(id=`goal_${en}` type="text", name=`goal_${en}` placeholder='請填入目標金額...')
        input(id=`work-on_${en}` type="text" name=`work_on_${en}` placeholder='請填入目標金額...')




